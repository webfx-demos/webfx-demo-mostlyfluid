<?xml version="1.0" encoding="UTF-8" standalone="no"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>webfx-demo-responsivedesign</artifactId>
        <groupId>org.webfx</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>webfx-demo-responsivedesign-application-javafx</artifactId>

    <dependencies> <!-- Generated by WebFx -->
        
        <dependency>
            <artifactId>webfx-demo-responsivedesign-application</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>
        
        <dependency>
            <artifactId>webfx-kit-javafx</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>
        
        <dependency>
            <artifactId>webfx-platform-java-appcontainer-impl</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>
        
        <dependency>
            <artifactId>webfx-platform-java-shutdown-impl</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>
        
        <dependency>
            <artifactId>webfx-platform-shared-log-impl-simple</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>
    
    </dependencies>

    <build>
        <plugins>
            <!-- This plugin must be ran explicitly by invoking mvn javafx:jlink -->
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.3</version>
                <configuration>
                    <release>${maven.compiler.release}</release>
                    <jlinkImageName>jlinkImage</jlinkImageName>
                    <launcher>launcher</launcher>
                    <mainClass>webfx.platform.shared.appcontainer/${webfx.mainClass}</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <!-- profile to make a fat standalone executable jar with all dependent libraries included inside -->
        <profile>
            <id>javafx-fatjar</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>

            <build>
                <plugins>

                    <!-- Calling Shade with the configuration defined in the parent pom -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-shade-plugin</artifactId>
                    </plugin>

                </plugins>
            </build>
        </profile>

        <profile>
            <id>javapackager</id>

            <build>
                <plugins>

                    <plugin>
                        <groupId>io.github.fvarrui</groupId>
                        <artifactId>javapackager</artifactId>
                        <version>1.4.2</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>package</goal>
                                </goals>
                                <configuration>
                                    <!-- mandatory -->
                                    <mainClass>${webfx.mainClass}</mainClass>
                                    <!-- optional -->
                                    <bundleJre>true</bundleJre>
                                    <name>ResponsiveDesign</name>
                                    <displayName>Responsive Design</displayName>
                                    <url>https://webfx-responsivedesign-demo.netlify.app</url>
                                    <organizationName>WebFx</organizationName>
                                    <organizationUrl>https://webfx-project.org</organizationUrl>
                                    <organizationEmail>info@webfx-project.org</organizationEmail>
                                    <outputDirectory>${project.build.directory}/javapackager</outputDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>

    </profiles>

</project>